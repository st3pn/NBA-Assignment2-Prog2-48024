    <Label alignment="CENTER" styleClass="label-header" fx:id="roundLabel"/>
    
    <HBox alignment="CENTER">
    <TableView fx:id="roundTv">
        <columns>
            <TableColumn minWidth="100" text="Team 1" fx:id="team1Column"/>
            <TableColumn minWidth="100" fx:id="vsColumn"/>
            <TableColumn minWidth="100" text="Team 2" fx:id="team2Column"/>
        </columns>
    </TableView>
    </HBox>

    <Button text="Close" onAction="#close" alignment="CENTER"/>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
